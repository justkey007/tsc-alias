{
  "name": "tsc-alias",
  "version": "1.6.0",
  "description": "Replace alias paths with relative paths after typescript compilation.",
  "main": "dist/index.js",
  "files": [
    "dist/"
  ],
  "bin": {
    "tsc-alias": "dist/bin/index.js"
  },
  "scripts": {
    "prepare": "husky install",
    "build:dev": "tsc -w",
    "clean": "rimraf dist && tsc && pnpm link -g",
    "release:patch": "npm version patch",
    "postversion": "git push && git push --tags && npm publish",
    "format": "prettier --write \"**/*.{js,ts}\"",
    "test": "npm run clean && jest"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/justkey007/tsc-alias.git"
  },
  "keywords": [
    "typescript",
    "paths",
    "alias",
    "absolute path",
    "relative path",
    "compilation",
    "tsc"
  ],
  "author": "Juskey B.",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/justkey007/tsc-alias/issues"
  },
  "homepage": "https://github.com/justkey007/tsc-alias.git",
  "dependencies": {
    "chokidar": "^3.5.2",
    "commander": "^8.3.0",
    "find-node-modules": "^2.1.2",
    "globby": "^11.0.4",
    "mylas": "^2.1.6",
    "normalize-path": "^3.0.0"
  },
  "devDependencies": {
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.11",
    "@types/rimraf": "^3.0.2",
    "@types/shelljs": "^0.8.9",
    "husky": "^7.0.4",
    "jest": "^27.4.2",
    "prettier": "^2.5.0",
    "rimraf": "^3.0.2",
    "shelljs": "^0.8.4",
    "ts-jest": "^27.0.7",
    "typescript": "^4.5.2"
  }
}
