{
    "compilerOptions": {
        "target": "es2020",
        "module": "es2020",
        "outDir": "./dist",
        "rootDir": ".",
        "baseUrl": ".",
        "paths": {
            "@container": [
                "src/container.ts"
            ],
            "@interfaces": [
                "src/interfaces.ts"
            ],
            "@main": [
                "src/main.ts"
            ],
            "@util": [
                "src/utils/index.ts"
            ]
        },
        "moduleResolution": "node"
    },
    "include": [
        "src/**/*.ts",
        "test/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ],
    "tsc-alias": {
        "resolveFullPaths": true
    }
}
